<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/edt_mark"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:padding="5dp"
        android:hint="Enter mark"
        android:background="@drawable/circleedit"/>
    <Button
        android:layout_below="@id/edt_mark"
        android:id="@+id/find_grade"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Find Grade"
        android:textAllCaps="false"
        android:background="@drawable/btnbg"
        android:textColor="@color/colorBlack"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textSize="20sp"
        android:onClick="btnFindGrad"/>

    <com.cunoraz.gifview.library.GifView
        android:id="@+id/result_image"
        android:layout_width="500dp"
        android:layout_height="500dp"
        app:gif="@drawable/tryagain"
        android:visibility="visible"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/txt_grade_is"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grade is:"
        android:textSize="40sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/ptserifregular"
        android:layout_below="@id/result_image"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/txt_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:textSize="40sp"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/ptserifregular"
        android:layout_below="@id/result_image"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/txt_grade_is"
        />


</RelativeLayout>
